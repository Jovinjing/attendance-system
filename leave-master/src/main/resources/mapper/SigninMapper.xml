<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxuwz.zjh.mapper.SigninMapper">
    <select id="selectSigninPage" resultType="Signin">
        select *
        from signin ${ew.customSqlSegment}
    </select>

    <select id="findSigninById" resultType="Signin" parameterType="Signin">
        select *
        from signin
        where signin_id = #{signinId}
    </select>

    <insert id="addSignin" parameterType="Signin">
        insert into signin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            signin_id,
            <if test="courseId != null and courseId != ''">
                course_id,
            </if>
            <if test="reason != null and reason != ''">
                reason,
            </if>
            <if test="dayNum != null">
                day_num,
            </if>
            <if test="stuNo != null and stuNo != ''">
                stu_no,
            </if>
            <if test="applyTime != null and applyTime != ''">
                apply_time,
            </if>
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="auditTime != null and auditTime != ''">
                audit_time,
            </if>
            <if test="opinion != null and opinion != ''">
                opinion,
            </if>
        </trim>
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            #{signinId},
            <if test="courseId != null and courseId != ''">
                #{courseId},
            </if>
            <if test="reason != null and reason != ''">
                "打卡",
            </if>
            <if test="dayNum != null">
                1,
            </if>
            <if test="stuNo != null and stuNo != ''">
                "201809512327",
            </if>
            <if test="applyTime != null and applyTime != ''">
                #{applyTime},
            </if>
            <if test="status != null and status != ''">
                "成功",
            </if>
            <if test="auditTime != null and auditTime != ''">
                #{auditTime},
            </if>
            <if test="opinion != null and opinion != ''">
                #{opinion},
            </if>
        </trim>
    </insert>


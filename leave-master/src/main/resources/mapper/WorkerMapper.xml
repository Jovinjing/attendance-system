<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxuwz.zjh.mapper.WorkerMapper">

    <select id="findWorkerById" resultType="Worker" parameterType="Worker">
        select * from sys_worker where stu_id = #{stuId}
    </select>

    <select id="findWorkerByClassId" resultType="Worker" parameterType="Worker">
        select * from sys_worker where class_id = #{classId}
    </select>

    <select id="findWorkerAll" resultType="Worker">
        select * from sys_worker
    </select>

    <select id="selectWorkerPage" resultType="Worker">
        select * from sys_worker ${ew.customSqlSegment}
    </select>


    <insert id="addWorker" parameterType="Worker">
        insert into sys_worker
        <trim prefix="(" suffix=")" suffixOverrides=",">
            stu_id,
            <if test="classId != null and classId != ''">
                class_id,
            </if>
            <if test="stuName != null and stuName != ''">
                stu_name,
            </if>
            <if test="sex != null">
                sex,
            </if>
            <if test="address != null and address != ''">
                address,
            </if>
            <if test="stuTel != null and stuTel != ''">
                stu_tel,
            </if>
            <if test="contact != null and contact != ''">
                contact,
            </if>
            <if test="contactTel != null and contactTel != ''">
                contact_tel,
            </if>
        </trim>
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            #{stuId},
            <if test="classId != null and classId != ''">
                #{classId},
            </if>
            <if test="stuName != null and stuName != ''">
                #{stuName},
            </if>
            <if test="sex != null">
                #{sex},
            </if>
            <if test="address != null and address != ''">
                #{address},
            </if>
            <if test="stuTel != null and stuTel != ''">
                #{stuTel},
            </if>
            <if test="contact != null and contact != ''">
                #{contact},
            </if>
            <if test="contactTel != null and contactTel != ''">
                #{contactTel},
            </if>
        </trim>
    </insert>

    <update id="updateWorkerById" parameterType="Worker">
        update sys_worker
        <set>
            <if test="classId != null and classId != ''">
                class_id=#{classId},
            </if>
            <if test="stuName != null and stuName != ''">
                stu_name=#{stuName},
            </if>
            <if test="sex != null">
                sex= #{sex},
            </if>
            <if test="address != null and address != ''">
                address=#{address},
            </if>
            <if test="stuTel != null and stuTel != ''">
                stu_tel=#{stuTel},
            </if>
            <if test="contact != null and contact != ''">
                contact=#{contact},
            </if>
            <if test="contactTel != null and contactTel != ''">
                contact_tel=#{contactTel},
            </if>
        </set>
        where stu_id=#{stuId}
    </update>

    <delete id="deleteWorkerById"  parameterType="Worker">
        delete from sys_worker where stu_id=#{stuId}
    </delete>

</mapper>



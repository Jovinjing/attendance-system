<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxuwz.zjh.mapper.RestMapper">
    <select id="selectRestPage" resultType="Rest">
        select *
        from sys_rest ${ew.customSqlSegment}
    </select>

    <select id="findRestById" resultType="Rest" parameterType="Rest">
        select *
        from sys_rest
        where rest_id = #{restId}
    </select>

    <insert id="addRest" parameterType="Rest">
        insert into sys_rest
        <trim prefix="(" suffix=")" suffixOverrides=",">
            rest_id,
            <if test="courseId != null and courseId != ''">
                course_id,
            </if>
            <if test="reason != null and reason != ''">
                reason,
            </if>
            <if test="dayNum != null">
                day_num,
            </if>
            <if test="stuNo != null and stuNo != ''">
                stu_no,
            </if>
            <if test="applyTime != null and applyTime != ''">
                apply_time,
            </if>
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="auditTime != null and auditTime != ''">
                audit_time,
            </if>
            <if test="opinion != null and opinion != ''">
                opinion,
            </if>
        </trim>
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            #{restId},
            <if test="courseId != null and courseId != ''">
                #{courseId},
            </if>
            <if test="reason != null and reason != ''">
                #{reason},
            </if>
            <if test="dayNum != null">
                #{dayNum},
            </if>
            <if test="stuNo != null and stuNo != ''">
                #{stuNo},
            </if>
            <if test="applyTime != null and applyTime != ''">
                #{applyTime},
            </if>
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="auditTime != null and auditTime != ''">
                #{auditTime},
            </if>
            <if test="opinion != null and opinion != ''">
                #{opinion},
            </if>
        </trim>
    </insert>

    <update id="updateRestById" parameterType="Rest">
        update sys_rest
        <set>
            <if test="courseId != null and courseId != ''">
                course_id=#{courseId},
            </if>
            <if test="reason != null and reason != ''">
                reason=#{reason},
            </if>
            <if test="dayNum != null">
                day_num=#{dayNum},
            </if>
            <if test="stuNo != null and stuNo != ''">
                stu_no=#{stuNo},
            </if>
            <if test="applyTime != null and applyTime != ''">
                apply_time=#{applyTime},
            </if>
            <if test="status != null and status != ''">
                status=#{status},
            </if>
            <if test="auditTime != null and auditTime != ''">
                audit_time=#{auditTime},
            </if>
            <if test="opinion != null and opinion != ''">
                opinion=#{opinion},
            </if>
        </set>
        where rest_id=#{restId}
    </update>
</mapper>
